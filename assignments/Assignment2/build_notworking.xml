<?xml version="1.0" encoding="UTF-8"?>
<project name="Assigment2" default="execute.server" basedir=".">

	<property name="build.dir" value="build" />
	<property name="lib.dir" value="WebContent/WEB-INF/lib" />
	<property name="src.dir" value="src" />
	
	<target name="init">
		<echo message="Init has been called" />
		<mkdir dir="${build.dir}" />
		<echo message="${build.dir} has been created" />
	</target>
	
	<target name="clean">
		<echo message="Clean has been called" />
		<delete dir="${build.dir}" />
	</target>
	
	<path id="compile.classpath">
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
		
	<target name="compile" depends="init">
		<echo message="Compile target has been called" />
		<copy todir="${build.dir}">
			<fileset dir="${src.dir}">
				<include name="*.properties" />
			</fileset>
		</copy>
		<javac srcdir="${src.dir}" destdir="${build.dir}">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	<target name="execute.server" depends="compile">
	    <echo message="Executing server.." />
		<java classname="introsde.assignment2.rest.server.StandaloneServer">		
			<classpath>
				<pathelement location="${build.dir}" />
				<path refid="compile.classpath" />
			</classpath>
		</java>
	</target>
	
	<target name="execute.myclient" depends="execute.server">
	    <echo message="Executing client for my webserver.." />
		<java classname="introsde.assignment2.rest.client.TestMyWebServer">
			<classpath>
				<pathelement location="${build.dir}" />
				<path refid="compile.classpath" />
			</classpath>
		</java>
	</target>
	
	<target name="execute.client">
	    <echo message="Executing client for others webserver.." />
		<java classname="introsde.assignment2.rest.client.TestOthersWebServer">
			<classpath refid="Assignment2.classpath" />
		</java>
	</target>
</project>